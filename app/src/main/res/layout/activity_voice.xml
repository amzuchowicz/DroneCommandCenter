<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ProgressBar
        android:id="@+id/progressBar1"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/toggleButton1"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/progressBar1"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/tglPractice"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp" />

    <ToggleButton
        android:id="@+id/toggleButton1"
        android:layout_width="125dp"
        android:layout_height="75dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="ToggleButton"
        android:layout_marginTop="10dp"
        android:textOn="Stop"
        android:textOff="Start"
        android:textColor="@android:color/white"
        android:checked="false"
        android:backgroundTint="@color/colorPrimary" />

    <ToggleButton
        android:layout_width="140dp"
        android:layout_height="100dp"
        android:text="Practice"
        android:id="@+id/tglPractice"
        android:textOn="Practice OFF!"
        android:textOff="Practice ON"
        android:checked="false"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_alignTop="@+id/btnEmergency" />

    <Button
        android:layout_width="140dp"
        android:layout_height="75dp"
        android:text="EMERGENCY!"
        android:id="@+id/btnEmergency"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:textColor="@color/abc_primary_text_material_dark"
        android:backgroundTint="@color/material_red_500"
        android:onClick="sendEmergency" />

</RelativeLayout>